<div id="bannerCarousel" class="carousel slide mb-5" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        {% for i, banner in banners|batch(1) %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
                <div class="row justify-content-center">
                    {% for b in banner %}
                        <div class="col-12 col-md-12">
                            <div class="bg-light py-3 px-3 rounded-3 shadow-sm my-2 d-flex align-items-center">
                                
                                {# Image de la bannière #}
					<a href="{{path('app_etablissement_show', {'id': b.id})}}">
                                <img src="{{ asset('uploads/logos/' ~ b.imageName) }}" alt="{{ b.name }}"
                                     class="me-3 rounded-circle border shadow" style="width: 60px; height: 60px; object-fit: cover;">
                                </a>
                                {# Texte et informations #}
                                <div class="d-flex flex-column flex-grow-1">
                                    <h6 class="fw-bold text-dark mb-1">{{ b.name }}</h6>
                                    <div class="d-flex align-items-center mb-1">
                                        {# Notation étoiles dynamiques #}
                                        {% for i in 1..5 %}
                                            <i class="fas fa-star {% if i <= 4 %}text-warning{% else %}text-muted{% endif %}"></i>
                                        {% endfor %}
                                    </div>
                                    <p class="text-muted mb-0 small">{{ b.type }}</p>
                                </div>
                                
                                {# Promo #}
                                <div class="bg-danger text-white py-1 px-3 rounded-pill shadow text-center">
                                    <span class="small fw-bold">-{{ b.promo }}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
